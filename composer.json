{
    "name": "meliconnect/meliconnect",
    "description": "WordPress plugin to connect and synchronize with MercadoLibre.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Meliconnect\\Meliconnect\\": "includes/"
        }
    },
    "authors": [
        {
            "name": "meliconnect",
            "email": "plugins@meliconnect.com",
            "homepage": "https://meliconnect.com/"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0"
    },
    "extra": {
        "wordpress-install-dir": "wp-content/plugins/meliconnect"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0"
    },
    "scripts": {
        "lint": [
            "php -d memory_limit=1024M vendor/bin/phpcs meliconnect.php uninstall.php --standard=WordPress",
            "php -d memory_limit=1024M vendor/bin/phpcs includes/Core --standard=WordPress",
            "php -d memory_limit=1024M vendor/bin/phpcs includes/Modules --standard=WordPress"
        ],
        "lint-fix": [
            "php -d memory_limit=1024M vendor/bin/phpcbf meliconnect.php uninstall.php --standard=WordPress",
            "php -d memory_limit=1024M vendor/bin/phpcbf includes/Core --standard=WordPress",
            "php -d memory_limit=1024M vendor/bin/phpcbf includes/Modules --standard=WordPress"
        ]
    }
}